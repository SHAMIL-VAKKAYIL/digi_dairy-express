<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/viewDiary.css">
    <style>

    </style>
</head>

<body>
    <div class="main">
        <div class="filter">
            <form action="">
                <h3>Search by Date</h3>
                <div class="inpfield">
                    <input type="date" name="" id="date">
                    <a id="findbyDate" onclick="filter()"><img src="/images/search.png" alt=""></a>
                </div>
            </form>
        </div>
        <br><br>
        <h2>All Diaries:</h2>

        <div class="diary_main">
            {{#each diaries}}
            <div class="diary_card">
                <a onclick="getId(event)" data-id="{{_id}}">
                    <div class="items">
                        <p>Date:</p>
                        <p>{{upDate}}</p>
                    </div>
                    <div class="items">
                        <p>Title:</p>
                        <p>{{title}}</p>
                    </div>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
    <script>
        const filter = () => {
            const bdate = document.getElementById('date').value
            const date = bdate.split('-').reverse().join('/')
            document.getElementById('findbyDate').href = `/DiarybyDate?date=${date}`
        }

        const getId = (e) => {
            const DiaryId = e.currentTarget.getAttribute('data-id')
            e.currentTarget.href = `/Diary?id=${DiaryId}`
            console.log(DiaryId, 'id')
        }


    </script>
</body>

</html>